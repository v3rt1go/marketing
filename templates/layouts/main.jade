doctype 
html(lang="ro")
  head
    meta(charset='utf-8')     
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title ? title + " | " + site.title : site.title
    
    // HEAD - includes meta and headscripts blocks
    include ../includes/head.jade
  body#top
    block header
      header#home
        //- NAVIGATION
        include ../includes/header/navigation.jade
        //- HERO IMAGE
        include ../includes/header/hero.jade
    block main
      // TEXT
      include ../includes/elements/text-plain.jade
      // FEATURES
      include ../includes/elements/features.jade
      // TEXT CAROUSEL
      include ../includes/elements/text-carousel.jade
      // BANNER
      include ../includes/elements/banner.jade
      // FEATURES CAROUSEL
      include ../includes/elements/features-carousel.jade
      // CTA
      include ../includes/elements/cta.jade
      // TEAM
      include ../includes/elements/team.jade
      // SUBSCRIBE
      include ../includes/elements/subscribe.jade
      // CONTACT
      include ../includes/elements/contact.jade
    
    block footer
      include ../includes/footer.jade
    
    block footscripts
      // jQuery (necessary for Bootstrap's JavaScript plugins)
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
      // Include all compiled plugins (below), or include individual files as needed
      script(src='public/assets/js/waypoints.min.js')
      script(src='public/assets/js/bootstrap.min.js')
      script(src='public/assets/js/scripts.js')
      script(src='public/assets/js/jquery.flexslider.js')
      script(src='public/assets/js/modernizr.js')
